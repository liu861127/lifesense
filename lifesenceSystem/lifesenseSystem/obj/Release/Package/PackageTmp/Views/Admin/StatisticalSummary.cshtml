@model List<AdvertSystem.Models.t_qqsummary>

@{
    ViewBag.Title = "统计汇总";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        统计汇总
        <small></small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="../Admin/Index"><i class="fa fa-dashboard"></i>首页</a></li>
        <li><a href="#">统计中心</a></li>
        <li class="active">统计汇总</li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <!--<h3 class="box-title">Data Table With Full Features</h3>-->
                </div><!-- /.box-header -->
                <form class="form-horizontal">
                    <div class="box-body">
                        <div class="form-group">
                            <label class="col-sm-1 control-label" for="filteruserid">代理商</label>
                            <div class="col-sm-2">
                                <select id="selcustomename" class="form-control js-example-data-array-selected select2">
                                    <option value="全部">全部</option>
                                    @foreach (var m in (List<AdvertSystem.Models.t_user>)ViewData["userlist"])
                                    {
                                        if (ViewData["selcustomename"] != null && m.UserID == ViewData["selcustomename"].ToString())
                                        {
                                            <option value="@m.UserID" selected="selected">@m.CustomerName</option>
                                        }
                                        else
                                        {
                                            <option value="@m.UserID">@m.CustomerName</option>
                                        }
                                    }
                                </select>
                            </div>
                            <label class="col-sm-1 control-label" for="filteruserid">客户名称</label>
                            <div class="col-sm-2">
                                <input id="filtecustomename" class="form-control" type="text" value="@ViewData["filtecustomename"]" />
                            </div>
                            <label class="col-sm-1 control-label" for="filterbegindate">起始时间</label>
                            <div class="col-sm-2">
                                <input id="filterbegindate" name="filterbegindate" class="form-control" type="text" value="@ViewData["filterbegindate"]" onclick="WdatePicker({ skin:'twoer',dateFmt: 'yyyy-MM-dd', minDate: '1900-01-01' })" readonly="readonly" />
                            </div>
                            <label class="col-sm-1 control-label" for="filterenddate">结束时间</label>
                            <div class="col-sm-2">
                                <input id="filterenddate" name="filterenddate" class="form-control" type="text" value="@ViewData["filterenddate"]" onclick="WdatePicker({ skin:'twoer',dateFmt: 'yyyy-MM-dd', minDate: '1900-01-01' })" readonly="readonly" />
                            </div>
                        </div>
                        <div class="form-group col-sm-12">
                            <div class="pull-right">
                                <button id="btnsel" type="button" class="btn btn-primary" onclick="seldata()">查询</button>
                                <button type="button" class="btn btn-primary" onclick="location.href = '../Admin/AddStatisticalSummary'">录入广告点击量</button>
                                <button type="button" class="btn btn-primary" onclick="exportexcel(@Model.Count)">导出Excel</button>
                            </div>
                        </div>
                        <table id="example1" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th style="min-width:30px">编号</th>
                                    <th style="min-width:80px">客户名称</th>
                                    <th style="min-width:150px">时间</th>
                                    <th style="min-width:80px">曝光量</th>
                                    <th style="min-width:80px">点击量</th>
                                    <th style="min-width:80px">点击率</th>
                                    <th style="min-width:80px">花费（元）</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    int No = 1;
                                    decimal ADExposure = 0;
                                    decimal ClickRate = 0;
                                    decimal CTR = 0;
                                    decimal Expense = 0;
                                }
                                @foreach (var m in Model)
                                {
                                    <tr>
                                        <td>@No</td>
                                        <td>@m.CustomerName</td>
                                        <td>@m.SummaryDate</td>
                                        <td>@m.ADExposure</td>
                                        <td>@m.ClickRate</td>
                                        <td>@m.CTR%</td>
                                        <td>@m.Expense</td>
                                    </tr>
                                    ADExposure += Convert.ToDecimal(m.ADExposure);
                                    ClickRate += Convert.ToDecimal(m.ClickRate);
                                    CTR += Convert.ToDecimal(m.CTR);
                                    Expense += Convert.ToDecimal(m.Expense);
                                    No++;
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>总计</th>
                                    <th></th>
                                    <th></th>
                                    <th>@ADExposure</th>
                                    <th>@ClickRate</th>
                                    <th>@CTR%</th>
                                    <th>@Expense</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div><!-- /.box-body -->
                </form>
            </div><!-- /.box -->
        </div><!-- /.col -->
    </div><!-- /.row -->
</section><!-- /.content -->
<script>
    function seldata() {
        location.href = "?seluserid=" + $("#selcustomename").val() + "&customename=" + $("#filtecustomename").val() + "&begindate=" + $("#filterbegindate").val() + "&enddate=" + $("#filterenddate").val();
    }

    function exportexcel(count) {
        var usertype = "@ViewData["usertype"]";
        if (usertype == "代理商") {
            var d = dialog({
                title: '提示',
                content: '没有权限,不能导出',
                quickClose: true// 点击空白处快速关闭
            });
            d.show();
            setTimeout(function () {
                d.close().remove();
            }, 3000);
            return;
        }
        if (count > 0) {
            location.href = "../Admin/ExportExcel_Summary?seluserid=" + $("#selcustomename").val() + "&customename=" + $("#filtecustomename").val() + "&begindate=" + $("#filterbegindate").val() + "&enddate=" + $("#filterenddate").val();
        }
        else {
            var d = dialog({
                title: '提示',
                content: '数据为空,不能导出',
                quickClose: true// 点击空白处快速关闭
            });
            d.show();
            setTimeout(function () {
                d.close().remove();
            }, 3000);
        }
    }
</script>
