@model  AdvertSystem.Models.t_qqsummary

@{
    ViewBag.Title = "录入广告点击量";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        录入广告点击量
        <small></small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="../Admin/Index"><i class="fa fa-dashboard"></i>首页</a></li>
        <li><a href="#">统计中心</a></li>
        <li class="active">录入广告点击量</li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <div class="row">
        <!-- left column -->
        <div class="col-md-6">
            <div class="box">
                <div class="box-header">
                    <!--<h3 class="box-title">Data Table With Full Features</h3>-->
                </div><!-- /.box-header -->
                <!-- form start -->
                <form id="form1" class="form-horizontal" method="post">
                    <div class="box-body">
                        <div class="form-group">
                            <label class="col-sm-3 control-label" for="seluser">用户名<span style="color:red">*</span></label>
                            <div class="col-sm-5">
                                <select id="seluser" class="form-control js-example-data-array-selected select2">
                                    @foreach (var m in (List<AdvertSystem.Models.t_user>)ViewData["userlist"])
                                    {
                                        <option value="@m.UserID">@m.UserID</option>
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label" for="SummaryDate">时间<span style="color:red">*</span></label>
                            <div class="col-sm-8">
                                @Html.TextBoxFor(model => model.SummaryDate, new { @class = "form-control", placeholder = "录入时间", @id = "SummaryDate", onclick = "WdatePicker({ skin:'twoer',dateFmt: 'yyyy-MM-dd', minDate: '1900-01-01' })", @readonly = "readonly" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label" for="ADExposure">曝光量<span style="color:red">*</span></label>
                            <div class="col-sm-8">
                                @Html.TextBoxFor(model => model.ADExposure, new { @class = "form-control", placeholder = "录入曝光量", @id = "ADExposure", @type = "number", step = "0.01" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label" for="ClickRate">点击量<span style="color:red">*</span></label>
                            <div class="col-sm-8">
                                @Html.TextBoxFor(model => model.ClickRate, new { @class = "form-control", placeholder = "录入点击量", @id = "ClickRate", @type = "number", step = "0.01" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label" for="CTR">点击率<span style="color:red">*</span></label>
                            <div class="col-sm-8">
                                @Html.TextBoxFor(model => model.CTR, new { @class = "form-control", placeholder = "录入点击率", @id = "CTR", @type = "number", step = "0.01" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label" for="Expense">花费<span style="color:red">*</span></label>
                            <div class="col-sm-8">
                                @Html.TextBoxFor(model => model.Expense, new { @class = "form-control", placeholder = "录入花费", @id = "Expense", @type = "number", step = "0.01" })
                            </div>
                        </div>
                    </div><!-- /.box-body -->
                    <div class="box-footer">
                        <button type="submit" class="btn btn-primary">确定</button>
                    </div>
                </form>
            </div><!-- /.box -->
        </div><!--/.col (left) -->
    </div><!-- /.row -->
</section><!-- /.content -->
