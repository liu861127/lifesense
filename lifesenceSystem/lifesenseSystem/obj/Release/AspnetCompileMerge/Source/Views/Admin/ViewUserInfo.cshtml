@model List<AdvertSystem.Models.t_user>

@{
    ViewBag.Title = "查看账户资料";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        查看账户资料
        <small></small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="../Admin/Index"><i class="fa fa-dashboard"></i>首页</a></li>
        <li><a href="../Admin/ViewUserInfo#">账户中心</a></li>
        <li class="active">查看账户资料</li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <!--<h3 class="box-title">Data Table With Full Features</h3>-->
                </div><!-- /.box-header -->
                <form class="form-horizontal">
                    <div class="box-body">
                        <div class="form-group">
                            <label class="col-sm-1 control-label" for="filteruserid">客户名称</label>
                            <div class="col-sm-2">
                                <input id="filtecustomename" class="form-control" type="text" value="@ViewData["filtecustomename"]" />
                            </div>
                            <label class="col-sm-1 control-label" for="filterbegindate">起始时间</label>
                            <div class="col-sm-2">
                                <input id="filterbegindate" name="filterbegindate" class="form-control" type="text" value="@ViewData["filterbegindate"]" onclick="WdatePicker({ skin:'twoer',dateFmt: 'yyyy-MM-dd', minDate: '1900-01-01' })" readonly="readonly" />
                            </div>
                            <label class="col-sm-1 control-label" for="filterenddate">结束时间</label>
                            <div class="col-sm-2">
                                <input id="filterenddate" name="filterenddate" class="form-control" type="text" value="@ViewData["filterenddate"]" onclick="WdatePicker({ skin:'twoer',dateFmt: 'yyyy-MM-dd', minDate: '1900-01-01' })" readonly="readonly" />
                            </div>
                            <div class="col-sm-1"><button id="btnsel" type="button" class="btn btn-primary" onclick="seldata()">查询</button></div>
                        </div>
                        <div class="form-group col-sm-12">
                            <div class="pull-right">
                                <button type="button" class="btn btn-primary" onclick="exportexcel(@Model.Count)">导出Excel</button>
                            </div>
                        </div>
                        <table id="example1" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th style="min-width:30px;">编号</th>
                                    <th style="min-width:80px;">账号</th>
                                    <th style="min-width:80px;">客户名称</th>
                                    <th style="min-width:80px;">公司全称</th>
                                    <th style="min-width:200px;">营业执照</th>
                                    <th style="min-width:200px;">行业资质文件</th>
                                    <th style="min-width:100px;">跳转网址链接</th>
                                    <th style="min-width:80px;">联系人</th>
                                    <th style="min-width:80px;">联系电话</th>
                                    <th style="min-width:80px;">QQ号</th>
                                    <th style="min-width:80px;">联系地址</th>
                                    <th style="min-width:150px;">注册日期</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    int No = 1;
                                    string hzm = ".txt";
                                }
                                @foreach (var m in Model)
                                {
                                    <tr>
                                        <td>@No</td>
                                        <td>@m.UserID</td>
                                        <td>@m.CustomerName</td>
                                        <td>@m.CompanyName</td>
                                        <td><img src="@m.BusinessLicense" width="100" height="100" /></td>
                                        <td><img src="@m.IQD" width="100" height="100" /></td>
                                        <td><a href="@m.Flink" target="_blank">@m.Flink</a></td>
                                        <td>@m.ATTEN</td>
                                        <td>@m.Tel</td>
                                        <td>@m.QQ</td>
                                        <td>@m.ContactAddress</td>
                                        <td>@m.RegisterTime</td>
                                    </tr>
                                    No++;
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>编号</th>
                                    <th>账号</th>
                                    <th>客户名称</th>
                                    <th>公司全称</th>
                                    <th>营业执照</th>
                                    <th>行业资质文件</th>
                                    <th>跳转网址链接</th>
                                    <th>联系人</th>
                                    <th>联系电话</th>
                                    <th>QQ号</th>
                                    <th>联系地址</th>
                                    <th>注册日期</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div><!-- /.box-body -->
                </form>
            </div><!-- /.box -->
        </div><!-- /.col -->
    </div><!-- /.row -->
</section><!-- /.content -->
<script>
    function seldata() {
        location.href = "?customename=" + $("#filtecustomename").val() + "&begindate=" + $("#filterbegindate").val() + "&enddate=" + $("#filterenddate").val();
    }

    function exportexcel(count) {
        var usertype = "@ViewData["usertype"]";
        if (usertype == "代理商") {
            var d = dialog({
                title: '提示',
                content: '没有权限,不能导出',
                quickClose: true// 点击空白处快速关闭
            });
            d.show();
            setTimeout(function () {
                d.close().remove();
            }, 3000);
            return;
        }
        if(count>0)
        {
            location.href = "../Admin/ExportExcel_UserInfo?customename=" + $("#filtecustomename").val() + "&begindate=" + $("#filterbegindate").val() + "&enddate=" + $("#filterenddate").val();
        }
        else
        {
            var d = dialog({
                title: '提示',
                content: '数据为空,不能导出',
                quickClose: true// 点击空白处快速关闭
            });
            d.show();
            setTimeout(function () {
                d.close().remove();
            }, 3000);
        }
    }
</script>

