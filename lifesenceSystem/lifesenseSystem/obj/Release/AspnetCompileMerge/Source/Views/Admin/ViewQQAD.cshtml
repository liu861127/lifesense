@model List<AdvertSystem.Models.t_qqad>

@{
    ViewBag.Title = "查看QQ广告";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        查看QQ广告
        <small></small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="../Admin/Index"><i class="fa fa-dashboard"></i>首页</a></li>
        <li><a href="../Admin/ViewQQAD#">会员QQ推广</a></li>
        <li class="active">查看QQ广告</li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <!--<h3 class="box-title">Data Table With Full Features</h3>-->
                </div><!-- /.box-header -->
                <form class="form-horizontal">
                    <div class="box-body">
                        <div class="form-group">
                            <label class="col-sm-1 control-label" for="filteruserid">客户名称</label>
                            <div class="col-sm-2">
                                <input id="filtecustomename" class="form-control" type="text" value="@ViewData["filtecustomename"]" />
                            </div>
                            <label class="col-sm-1 control-label" for="filterbegindate">起始时间</label>
                            <div class="col-sm-2">
                                <input id="filterbegindate" name="filterbegindate" class="form-control" type="text" value="@ViewData["filterbegindate"]" onclick="WdatePicker({ skin:'twoer',dateFmt: 'yyyy-MM-dd', minDate: '1900-01-01' })" readonly="readonly" />
                            </div>
                            <label class="col-sm-1 control-label" for="filterenddate">结束时间</label>
                            <div class="col-sm-2">
                                <input id="filterenddate" name="filterenddate" class="form-control" type="text" value="@ViewData["filterenddate"]" onclick="WdatePicker({ skin:'twoer',dateFmt: 'yyyy-MM-dd', minDate: '1900-01-01' })" readonly="readonly" />
                            </div>
                            <div class="col-sm-1"><button id="btnsel" type="button" class="btn btn-primary" onclick="seldata()">查询</button></div>
                        </div>
                        <div class="form-group col-sm-12">
                            <div class="pull-right">
                                <button type="button" class="btn btn-primary" onclick="exportexcel(@Model.Count)">导出Excel</button>
                            </div>
                        </div>
                        <table id="example1" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th style="min-width:30px">编号</th>
                                    <th style="min-width:80px">客户名称</th>
                                    <th style="min-width:80px">广告名称</th>
                                    <th style="min-width:150px">推广开始时间</th>
                                    <th style="min-width:80px">收费方式</th>
                                    <th style="min-width:300px">广告位</th>
                                    <th style="min-width:80px">广告素材</th>
                                    <th style="min-width:100px">对应的跳转链接</th>
                                    <th style="min-width:150px">广告建立时间</th>
                                    <th style="min-width:100px">qq包文件</th>
                                    <th style="min-width:80px">操作</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    int No = 1;
                                }
                                @foreach (var m in Model)
                                {
                                    AdvertSystem.Models.qqguanggaoEntities models = new AdvertSystem.Models.qqguanggaoEntities();
                                    List<AdvertSystem.Models.t_qqadp> adplist = models.t_qqadp.Where(a => a.ADFID == m.FID).ToList();
                                    AdvertSystem.Models.t_qqpackage qqpack = models.t_qqpackage.Where(c => c.FID == m.QQTxt).First();
                                    Dictionary<string, string> dic = new Dictionary<string, string>();
                                    string mh = ":";
                                    string hzm = ".txt";
                                    string fh = ";";
                                    <tr>
                                        <td>@No</td>
                                        <td>@m.CustomerName</td>
                                        <td>@m.ADName</td>
                                        @if (!m.ADDate.Contains("至"))
                                        {
                                            <td>@m.ADDate</td>
                                        }
                                        else
                                        {
                                            <td>@m.ADDate.Split('至')[0]<br />-<br />@m.ADDate.Split('至')[1]</td>
                                        }
                                        <td>@m.ChargesMethod</td>
                                        <td>
                                            QQ聊天窗系列(
                                            @foreach (var adp in adplist)
                                            {
                                                dic.Add(adp.FID, adp.ADTitle);
                                                @adp.ADTitle@fh
                                            }
                                            )
                                        </td>
                                        <td>
                                            <a href="javascript:void()" onclick="browsepicture(@No)">浏览广告素材</a>
                                            <div id="AD_@No" style="display:none;">
                                                <div class="row">
                                                    @foreach (string key in dic.Keys)
                                                    {
                                                        List<AdvertSystem.Models.t_qqimage> imglist = models.t_qqimage.Where(b => b.ADPFID == key).ToList();
                                                        <div class="box box-default">
                                                            <div class="box-header with-border">
                                                                <h3 class="box-title">@dic[key]</h3>
                                                                <div class="box-tools pull-right">
                                                                    <button class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                                                                </div><!-- /.box-tools -->
                                                            </div><!-- /.box-header -->
                                                            <div class="box-body">
                                                                @foreach (AdvertSystem.Models.t_qqimage img in imglist)
                                                                {
                                                                    <img width="100" height="100" src="@img.PictureFile" />
                                                                }
                                                            </div><!-- /.box-body -->
                                                        </div>
                                                    }
                                                </div>
                                            </div>
                                        </td>
                                        <td><a href="@m.FLink" target="_blank">@m.FLink</a> </td>
                                        <td>@Convert.ToDateTime(m.ADCreateDate).ToString("yyyy-MM-dd HH:mm:ss")</td>
                                        <td>@qqpack.QQPName@hzm</td>
                                        <td><a href="javascript:void()" onclick="updownrar('@m.FID','@qqpack.FID')">素材下载</a></td>
                                    </tr>
                                                    No++;
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>编号</th>
                                    <th>客户名称</th>
                                    <th>广告名称</th>
                                    <th>推广开始时间</th>
                                    <th>收费方式</th>
                                    <th>广告位</th>
                                    <th>广告素材</th>
                                    <th>对应的跳转链接</th>
                                    <th>广告建立时间</th>
                                    <th>qq包文件</th>
                                    <th>操作</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div><!-- /.box-body -->
                </form>
            </div><!-- /.box -->
        </div><!-- /.col -->
    </div><!-- /.row -->
</section><!-- /.content -->
<script>
    function seldata() {
        location.href = "?customename=" + $("#filtecustomename").val() + "&begindate=" + $("#filterbegindate").val() + "&enddate=" + $("#filterenddate").val();
    }

    function exportexcel(count) {
        var usertype = "@ViewData["usertype"]";
        if (usertype == "代理商") {
            var d = dialog({
                title: '提示',
                content: '没有权限,不能导出',
                quickClose: true// 点击空白处快速关闭
            });
            d.show();
            setTimeout(function () {
                d.close().remove();
            }, 3000);
            return;
        }
        if (count > 0) {
            location.href = "../Admin/ExportExcel_QQAD?customename=" + $("#filtecustomename").val() + "&begindate=" + $("#filterbegindate").val() + "&enddate=" + $("#filterenddate").val();
        }
        else{
            var d = dialog({
                title: '提示',
                content: '数据为空,不能导出',
                quickClose: true// 点击空白处快速关闭
            });
            d.show();
            setTimeout(function () {
                d.close().remove();
            }, 3000);
        }
    }

    function browsepicture(id) {
        var d = dialog({
            title: '图片素材浏览',
            content: '<div id="bropic"></div>'
        });
        d.showModal();
        $("#AD_" + id + " .row").clone(true).appendTo("#bropic")
    }

    function updownrar(adid, packid) {
        location.href = "../Admin/UpDownRar?ADId=" + adid + "&PackId=" + packid;
    }
</script>
