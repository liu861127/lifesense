<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>广告投放系统 | @ViewBag.Title</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <!-- Bootstrap 3.3.4 -->
    <link href="../../bootstrap/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <!-- Font Awesome Icons -->
    <link href="../../bootstrap/css/font-awesome.min.css" rel="stylesheet" type="text/css" />
    <!-- Ionicons -->
    <link href="../../bootstrap/css/ionicons.min.css" rel="stylesheet" type="text/css" />
    <!-- Theme style -->
    <link href="../../dist/css/AdminLTE.min.css" rel="stylesheet" type="text/css" />
    <!-- DATA TABLES -->
    <link href="../../plugins/datatables/dataTables.bootstrap.css" rel="stylesheet" type="text/css" />
    <!-- daterange picker -->
    <link href="../../plugins/daterangepicker/daterangepicker-bs3.css" rel="stylesheet" type="text/css" />
    <!-- iCheck for checkboxes and radio inputs -->
    <link href="../../plugins/iCheck/all.css" rel="stylesheet" type="text/css" />
    <!--FileInPut-->
    <link href="../../plugins/fileinput/fileinput.css" rel="stylesheet" type="text/css" />
    <!-- Select2 -->
    <link href="../../plugins/select2/select2.min.css" rel="stylesheet" type="text/css" />
    <!-- My97DatePicker -->
    <link href="../../plugins/My97DatePicker/skin/WdatePicker.css" rel="stylesheet" type="text/css" />
    <!-- aui-artDialog -->
    <link href="../../plugins/aui-artDialog/ui-dialog.css" rel="stylesheet" type="text/css" />
    <!-- AdminLTE Skins. Choose a skin from the css/skins
         folder instead of downloading all of them to reduce the load. -->
    <link href="../../dist/css/skins/_all-skins.min.css" rel="stylesheet" type="text/css" />
    <!--<link href="../../css/jquery-confirm.css" rel="stylesheet" type="text/css" />-->
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="../../JS/html5shiv.min.js"></script>
        <script src="../../JS/respond.min.js"></script>
    <![endif]-->
</head>
<!-- ADD THE CLASS fixed TO GET A FIXED HEADER AND SIDEBAR LAYOUT -->
<!-- the fixed layout is not compatible with sidebar-mini -->
<body class="skin-blue fixed sidebar-mini">
    <!-- Site wrapper -->
    <div class="wrapper">
        <header class="main-header">
            <!-- Logo -->
            <a href="#" class="logo">
                <!-- mini logo for sidebar mini 50x50 pixels -->
                <span class="logo-mini"><b>A</b>D</span>
                <!-- logo for regular state and mobile devices -->
                <span class="logo-lg"><b>广告投放系统</b></span>
            </a>
            <!-- Header Navbar: style can be found in header.less -->
            <nav class="navbar navbar-static-top" role="navigation">
                <!-- Sidebar toggle button-->
                <a href="#" class="sidebar-toggle" data-toggle="offcanvas" role="button">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </a>
                <div class="navbar-custom-menu">
                    <ul class="nav navbar-nav">

                        <!-- User Account: style can be found in dropdown.less -->
                        <li class="dropdown user user-menu">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">

                                @ViewData["user"]<span class="hidden-xs">，欢迎您登录广告投放系统！</span>
                            </a>

                        </li>
                        <!-- Control Sidebar Toggle Button -->
                        <li><a href="javascript:void()" id="SignOut">退出登录</a></li>
                    </ul>
                </div>
            </nav>
        </header>
        <!-- =============================================== -->
        <!-- Left side column. contains the sidebar -->
        <aside class="main-sidebar">
            <!-- sidebar: style can be found in sidebar.less -->
            <section class="sidebar">
                <!-- Sidebar user panel -->
                <div class="user-panel" style="height:30px">

                    <div class="pull-left info">
                        <p>@ViewData["user"]</p>
                    </div>
                </div>
                <!-- search form -->
                <form action="#" method="get" class="sidebar-form">
                    <div class="input-group">
                        <input type="text" name="q" class="form-control text-center" value="@ViewData["usertype"]" readonly="readonly" />
                        <span class="input-group-btn">
                            <button type="button" name="search" id="search-btn" class="btn btn-flat"><i class="fa fa-male"></i></button>
                        </span>
                    </div>
                </form>
                <!-- /.search form -->
                <!-- sidebar menu: : style can be found in sidebar.less -->
                <ul class="sidebar-menu">
                    <li class="header">主导航</li>
                    @if (ViewData["usertype"] != null && ViewData["usertype"].ToString() != "")
                    {
                        if (ViewData["usertype"].ToString() == "管理员")
                        {
                            <li id="treeview_1" class="treeview">
                                <a href="#">
                                    <i class="fa fa-dashboard"></i>
                                    <span>商户管理</span><i class="fa fa-angle-left pull-right"></i>
                                </a>
                                <ul class="treeview-menu">
                                    <li id="treeview_1_1"><a href="../Admin/MerManger"><i class="fa fa-circle-o"></i>查看客户</a></li>
                                    <li id="treeview_1_2"><a href="../Admin/AddMer"><i class="fa fa-circle-o"></i>添加客户</a></li>
                                </ul>
                            </li>
                            <li id="treeview_2" class="treeview">
                                <a href="#">
                                    <i class="fa fa-th"></i> <span>QQ会员推广</span><i class="fa fa-angle-left pull-right"></i>
                                </a>
                                <ul class="treeview-menu">
                                    <li id="treeview_2_2"><a href="../Admin/ViewQQAD"><i class="fa fa-circle-o"></i>查看QQ广告</a></li>
                                </ul>
                            </li>
                            <li id="treeview_3" class="treeview">
                                <a href="#">
                                    <i class="fa fa-pie-chart"></i>
                                    <span>QQ通讯录管理</span><i class="fa fa-angle-left pull-right"></i>
                                </a>
                                <ul class="treeview-menu">
                                    <li id="treeview_3_1"><a href="../Admin/ViewQQPackage"><i class="fa fa-circle-o"></i>查看QQ包</a></li>
                                </ul>
                            </li>
                            <li id="treeview_4" class="treeview">
                                <a href="#">
                                    <i class="fa fa-laptop"></i>
                                    <span>账户中心</span>
                                    <i class="fa fa-angle-left pull-right"></i>
                                </a>
                                <ul class="treeview-menu">
                                    <li id="treeview_4_1"><a href="../Admin/ViewUserInfo"><i class="fa fa-circle-o"></i>查看账户资料</a></li>
                                </ul>
                            </li>
                            <li id="treeview_5" class="treeview">
                                <a href="#">
                                    <i class="fa fa-edit"></i> <span>统计中心</span>
                                    <i class="fa fa-angle-left pull-right"></i>
                                </a>
                                <ul class="treeview-menu">
                                    <li id="treeview_5_1"><a href="../Admin/StatisticalSummary"><i class="fa fa-circle-o"></i>统计汇总</a></li>
                                    <li id="treeview_5_2"><a href="../Admin/AccountConsumption"><i class="fa fa-circle-o"></i>账户消耗</a></li>
                                    <li id="treeview_5_3"><a href="../Admin/AddStatisticalSummary"><i class="fa fa-circle-o"></i>录入广告点击量</a></li>
                                </ul>
                            </li>
                            <li id="treeview_6" class="treeview">
                                <a href="#">
                                    <i class="fa fa-table"></i> <span>充值记录</span>
                                    <i class="fa fa-angle-left pull-right"></i>
                                </a>
                                <ul class="treeview-menu">
                                    <li id="treeview_6_1"><a href="../Admin/AddMoney"><i class="fa fa-circle-o"></i>客户充值</a></li>
                                    <li id="treeview_6_2"><a href="../Admin/ViewMoney"><i class="fa fa-circle-o"></i>查看充值</a></li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li id="treeview_1" class="treeview">
                                <a href="#">
                                    <i class="fa fa-dashboard"></i>
                                    <span>商户管理</span><i class="fa fa-angle-left pull-right"></i>
                                </a>
                                <ul class="treeview-menu">
                                    <li id="treeview_1_1"><a href="../Account/MerManger"><i class="fa fa-circle-o"></i>查看客户</a></li>
                                    <li id="treeview_1_2"><a href="../Account/AddMer"><i class="fa fa-circle-o"></i>添加客户</a></li>
                                </ul>
                            </li>
                            <li id="treeview_2" class="treeview">
                                <a href="#">
                                    <i class="fa fa-th"></i> <span>QQ会员推广</span><i class="fa fa-angle-left pull-right"></i>
                                </a>
                                <ul class="treeview-menu">
                                    <li id="treeview_2_1"><a href="../Account/AddQQAD"><i class="fa fa-circle-o"></i>新建QQ广告</a></li>
                                    <li id="treeview_2_2"><a href="../Account/ViewQQAD"><i class="fa fa-circle-o"></i>查看QQ广告</a></li>
                                </ul>
                            </li>
                            <li id="treeview_3" class="treeview">
                                <a href="#">
                                    <i class="fa fa-pie-chart"></i>
                                    <span>QQ通讯录管理</span><i class="fa fa-angle-left pull-right"></i>
                                </a>
                                <ul class="treeview-menu">
                                    <li id="treeview_3_1"><a href="../Account/ViewQQPackage"><i class="fa fa-circle-o"></i>查看QQ包</a></li>
                                    <li id="treeview_3_2"><a href="../Account/AddQQPackage"><i class="fa fa-circle-o"></i>新增QQ包</a></li>
                                </ul>
                            </li>
                            <li id="treeview_4" class="treeview">
                                <a href="#">
                                    <i class="fa fa-laptop"></i>
                                    <span>账户中心</span>
                                    <i class="fa fa-angle-left pull-right"></i>
                                </a>
                                <ul class="treeview-menu">
                                    <li id="treeview_4_1"><a href="../Account/UpdateUserInfo"><i class="fa fa-circle-o"></i>修改账户资料</a></li>
                                    <li id="treeview_4_2"><a href="../Account/ModifyPassword"><i class="fa fa-circle-o"></i>修改密码</a></li>
                                </ul>
                            </li>
                            <li id="treeview_5" class="treeview">
                                <a href="#">
                                    <i class="fa fa-edit"></i> <span>统计中心</span>
                                    <i class="fa fa-angle-left pull-right"></i>
                                </a>
                                <ul class="treeview-menu">
                                    <li id="treeview_5_1"><a href="../Account/StatisticalSummary"><i class="fa fa-circle-o"></i>统计汇总</a></li>
                                    <li id="treeview_5_2"><a href="../Account/AccountConsumption"><i class="fa fa-circle-o"></i>账户消耗</a></li>
                                </ul>
                            </li>
                            <li id="treeview_6" class="treeview">
                                <a href="#">
                                    <i class="fa fa-table"></i> <span>充值记录</span>
                                    <i class="fa fa-angle-left pull-right"></i>
                                </a>
                                <ul class="treeview-menu">
                                    <li id="treeview_6_1"><a href="../Account/AddMoney"><i class="fa fa-circle-o"></i>客户充值</a></li>
                                    <li id="treeview_6_2"><a href="../Account/ViewMoney"><i class="fa fa-circle-o"></i>查看充值</a></li>
                                </ul>
                            </li>
                        }
                    }
                </ul>
            </section>
            <!-- /.sidebar -->
        </aside>
        <!-- =============================================== -->
        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            @RenderBody()
        </div><!-- /.content-wrapper -->
        <footer class="main-footer">
            <div class="pull-right hidden-xs">
                <!--<b>Version</b> 2.2.0-->
            </div>
            <strong>Copyright &copy; 2014-2016 <a href="http://www.lherp.com/">名软软件有限公司</a>.</strong> 版权所有.
        </footer>
        <!-- Add the sidebar's background. This div must be placed
             immediately after the control sidebar -->
        <div class="control-sidebar-bg"></div>
    </div><!-- ./wrapper -->
    <!-- jQuery 2.1.4 -->
    <script src="../../plugins/jQuery/jQuery-2.1.4.min.js" type="text/javascript"></script>
    <!-- Bootstrap 3.3.2 JS -->
    <script src="../../bootstrap/js/bootstrap.min.js" type="text/javascript"></script>
    <!-- SlimScroll -->
    <script src="../../plugins/slimScroll/jquery.slimscroll.min.js" type="text/javascript"></script>
    <!-- FastClick -->
    <script src="../../plugins/fastclick/fastclick.min.js" type="text/javascript"></script>
    <!-- AdminLTE App -->
    <script src="../../dist/js/app.min.js" type="text/javascript"></script>
    <!-- AdminLTE for demo purposes -->
    <script src="../../dist/js/demo.js" type="text/javascript"></script>
    <script src="../../JS/jquery.form.js" type="text/javascript"></script>
    <!--<script src="../../JS/jquery-confirm.js" type="text/javascript"></script>-->
    <!-- DATA TABES SCRIPT -->
    <script src="../../plugins/datatables/jquery.dataTables.min.js" type="text/javascript"></script>
    <script src="../../plugins/datatables/dataTables.bootstrap.min.js" type="text/javascript"></script>
    <!-- md5 -->
    <script src="../../JS/jquery.md5.js" type="text/javascript"></script>
    <!-- date-range-picker -->
    <script src="../../JS/moment.min.js" type="text/javascript"></script>
    <script src="../../plugins/daterangepicker/daterangepicker.js" type="text/javascript"></script>
    <!-- iCheck 1.0.1 -->
    <script src="../../plugins/iCheck/icheck.min.js" type="text/javascript"></script>
    <!--FileInPut-->
    <script src="../../plugins/fileinput/fileinput.min.js" type="text/javascript"></script>
    <script src="../../plugins/fileinput/locales/zh.js" type="text/javascript"></script>
    <!-- Select2 -->
    <script src="../../plugins/select2/select2.full.min.js" type="text/javascript"></script>
    <script src="../../plugins/select2/i18n/zh-CN.js" type="text/javascript"></script>
    <!-- My97DatePicker -->
    <script src="../../plugins/My97DatePicker/WdatePicker.js" type="text/javascript"></script>
    <!-- aui-artDialog -->
    <script src="../../plugins/aui-artDialog/dialog-plus-min.js" type="text/javascript"></script>
    <!--<script src="../../plugins/aui-artDialog/lib/sea.js" type="text/javascript"></script>-->
    <script type="text/javascript">
        $(function () {
            $("#SignOut").click(function () {
                var d = dialog({
                    title: '提示',
                    content: '是否退出?',
                    okValue: '是',
                    ok: function () {
                        location.href = "../Account/Logout";
                    },
                    cancelValue: '否',
                    cancel: function () { }
                });
                d.show();
            })

            //iCheck for checkbox and radio inputs
            $('input[type="checkbox"].minimal, input[type="radio"].minimal').iCheck({
                checkboxClass: 'icheckbox_minimal-blue',
                radioClass: 'iradio_minimal-blue'
            });
        })
    </script>
    @if (ViewData["Home_JS"] != null)
    {
        foreach (var p in (Dictionary<string, string>)ViewData["Home_JS"])
        {
            <script src="@p.Value" type="text/javascript"></script>
        }
    }
</body>
</html>
