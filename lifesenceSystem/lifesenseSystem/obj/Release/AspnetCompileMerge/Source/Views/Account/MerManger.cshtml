@model List<AdvertSystem.Models.t_user>

@{
    ViewBag.Title = "查看客户";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        查看客户
        <small></small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="../Account/Index"><i class="fa fa-dashboard"></i>首页</a></li>
        <li><a href="../Account/MerManger#">商户管理</a></li>
        <li class="active">查看客户</li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <!--<h3 class="box-title">Data Table With Full Features</h3>-->
                </div><!-- /.box-header -->
                <form class="form-horizontal">
                    <div class="box-body">
                        <div class="form-group">
                            <label class="col-sm-1 control-label" for="filteruserid">客户名称</label>
                            <div class="col-sm-2">
                                <input id="filtecustomename" class="form-control" type="text" value="@ViewData["filtecustomename"]" />
                            </div>
                            <label class="col-sm-1 control-label" for="filterbegindate">起始时间</label>
                            <div class="col-sm-2">
                                <input id="filterbegindate" name="filterbegindate" class="form-control" type="text" value="@ViewData["filterbegindate"]" onclick="WdatePicker({ skin:'twoer',dateFmt: 'yyyy-MM-dd', minDate: '1900-01-01' })" readonly="readonly" />
                            </div>
                            <label class="col-sm-1 control-label" for="filterenddate">结束时间</label>
                            <div class="col-sm-2">
                                <input id="filterenddate" name="filterenddate" class="form-control" type="text" value="@ViewData["filterenddate"]" onclick="WdatePicker({ skin:'twoer',dateFmt: 'yyyy-MM-dd', minDate: '1900-01-01' })" readonly="readonly" />
                            </div>
                            <div class="col-sm-1"><button id="btnsel" type="button" class="btn btn-primary" onclick="seldata()">查询</button></div>
                        </div>
                        <div class="form-group col-sm-12">
                            <div class="pull-right">
                                <button type="button" class="btn btn-primary" onclick="location.href = '../Account/AddMer'">新增客户</button>
                                <button type="button" class="btn btn-primary" onclick="exportexcel(@Model.Count)">导出Excel</button>
                            </div>
                        </div>
                        <table id="example1" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th style="min-width:30px">编号</th>
                                    <th style="min-width:80px">客户名称</th>
                                    <th style="min-width:80px">账号</th>
                                    <th style="min-width:150px">注册时间</th>
                                    <th style="min-width:80px">QQ</th>
                                    <th style="min-width:80px">联系电话</th>
                                    <th style="min-width:100px">操作</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    int No = 1;
                                }
                                @foreach (var m in Model)
                                {
                                    <tr>
                                        <td>@No</td>
                                        <td>@m.CustomerName</td>
                                        <td>@m.UserID</td>
                                        <td>@Convert.ToDateTime(m.RegisterTime).ToString("yyyy-MM-dd")</td>
                                        <td>@m.QQ</td>
                                        <td>@m.Tel</td>
                                        <td><a href="javascript:void(0)" onclick="del('@m.FID')">删除</a>&nbsp;|&nbsp;<a href="~/Account/UpdateMer?userid=@m.UserID">修改</a>&nbsp;|&nbsp;<a href="javascript:void(0)" onclick="ResetPwd('@m.UserID','@m.CustomerName')">重置</a></td>
                                    </tr>
                                    No++;
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>编号</th>
                                    <th>客户名称</th>
                                    <th>账号</th>
                                    <th>注册时间</th>
                                    <th>QQ</th>
                                    <th>联系电话</th>
                                    <th>操作</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div><!-- /.box-body -->
                </form>
            </div><!-- /.box -->
        </div><!-- /.col -->
    </div><!-- /.row -->
</section><!-- /.content -->
<script type="text/javascript">
    function del(id) {
        var d = dialog({
            title: '提示',
            content: '是否删除?',
            okValue: '是',
            ok: function () {
                $.ajax({
                    type: "GET",
                    url: "../Account/DelMer",
                    data: "fid=" + id, //把form数据发送到后台处理
                    dataType: "json",
                    success: function (context) {
                        if (context.result) {
                            var a = dialog({
                                title: '提示',
                                content: context.message,
                                quickClose: true// 点击空白处快速关闭
                            });
                            a.show();
                            setTimeout(function () {
                                a.close().remove();
                            }, 3000);
                            location.href = context.url;
                        }
                        else {
                            var a = dialog({
                                title: '提示',
                                content: context.message,
                                quickClose: true// 点击空白处快速关闭
                            });
                            a.show();
                            setTimeout(function () {
                                a.close().remove();
                            }, 3000);
                        }
                    },
                    async: true,
                    cache: false,
                    error: function (XMLResponse) {
                        var a = dialog({
                            title: '提示',
                            content: XMLResponse.responseText,
                            quickClose: true// 点击空白处快速关闭
                        });
                        a.show();
                        setTimeout(function () {
                            a.close().remove();
                        }, 3000);
                    }
                })
            },
            cancelValue: '否',
            cancel: function () { }
        });
        d.show();
    }

    function ResetPwd(userid, customername) {
        var d = dialog({
            title: '提示',
            content: '是否重置密码?',
            okValue: '是',
            ok: function () {
                var loginPwd = $.md5(userid + customername + 123456 + "yms");
                $.ajax({
                    type: "GET",
                    url: "../Account/ResetPwd",
                    data: "userid=" + userid + "&userpwd=" + loginPwd,//把form数据发送到后台处理
                    dataType: "json",
                    success: function (context) {
                        if (context.result) {
                            var a = dialog({
                                title: '提示',
                                content: context.message,
                                quickClose: true// 点击空白处快速关闭
                            });
                            a.show();
                            setTimeout(function () {
                                a.close().remove();
                            }, 3000);
                        }
                        else {
                            var a = dialog({
                                title: '提示',
                                content: context.message,
                                quickClose: true// 点击空白处快速关闭
                            });
                            a.show();
                            setTimeout(function () {
                                a.close().remove();
                            }, 3000);
                        }
                    },
                    async: true,
                    cache: false,
                    error: function (XMLResponse) {
                        var a = dialog({
                            title: '提示',
                            content: XMLResponse.responseText,
                            quickClose: true// 点击空白处快速关闭
                        });
                        a.show();
                        setTimeout(function () {
                            a.close().remove();
                        }, 3000);
                    }
                })
            },
            cancelValue: '否',
            cancel: function () { }
        });
        d.show();
    }

    function seldata() {
        location.href = "?customename=" + $("#filtecustomename").val() + "&begindate=" + $("#filterbegindate").val() + "&enddate=" + $("#filterenddate").val();
    }

    function exportexcel(count) {
        var usertype = "@ViewData["usertype"]";
        if (usertype == "代理商") {
            var d = dialog({
                title: '提示',
                content: '没有权限,不能导出',
                quickClose: true// 点击空白处快速关闭
            });
            d.show();
            setTimeout(function () {
                d.close().remove();
            }, 3000);
            return;
        }
        if (count > 0) {
            location.href = "../Account/ExportExcel_Mer?customename=" + $("#filtecustomename").val() + "&begindate=" + $("#filterbegindate").val() + "&enddate=" + $("#filterenddate").val();
        }
        else {
            var d = dialog({
                title: '提示',
                content: '数据为空,不能导出',
                quickClose: true// 点击空白处快速关闭
            });
            d.show();
            setTimeout(function () {
                d.close().remove();
            }, 3000);
        }
    }
</script>
