@{
    ViewBag.Title = "修改密码";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        修改密码
        <small></small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="../Account/Index"><i class="fa fa-dashboard"></i>首页</a></li>
        <li><a href="../Account/ModifyPassword#">账户中心</a></li>
        <li class="active">修改密码</li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <div class="row">
        <!-- left column -->
        <div class="col-md-6">
            <div class="box box-success">
                <div class="box-header">
                    <!--<h3 class="box-title">Data Table With Full Features</h3>-->
                </div><!-- /.box-header -->
                <!-- form start -->
                <form role="form" id="form1" class="form-horizontal" method="post">
                    <div class="box-body">
                        <div class="form-group">
                            <label class="col-sm-3 control-label" for="OldUserPwd">原始密码<span style="color:red">*</span></label>
                            <div class="col-sm-8">
                                <input type="password" name="OldUserPwd" id="OldUserPwd" class="form-control" placeholder="录入原始密码" />
                                <input type="hidden" id="HiOldUserPwd" name="HiOldUserPwd" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label" for="NewUserPwd">新密码<span style="color:red">*</span></label>
                            <div class="col-sm-8">
                                <input type="password" name="NewUserPwd" id="NewUserPwd" class="form-control" placeholder="录入新密码" />
                                <input type="hidden" id="HiNewUserPwd" name="HiNewUserPwd" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label" for="ConfirmUserPwd">确认密码<span style="color:red">*</span></label>
                            <div class="col-sm-8">
                                <input type="password" name="ConfirmUserPwd" id="ConfirmUserPwd" class="form-control" placeholder="录入确认密码" />
                            </div>
                        </div>
                    </div><!-- /.box-body -->
                    <div class="box-footer">
                        <button type="submit" class="btn btn-primary">确定</button>
                    </div>
                    <input type="hidden" id="hiduser" value="@ViewData["user"]" />
                </form>
            </div><!-- /.box -->
        </div><!--/.col (left) -->
    </div><!-- /.row -->
</section><!-- /.content -->
