@model  AdvertSystem.Models.t_user

@{
    ViewBag.Title = "注册";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>广告投放系统 | @ViewBag.Title</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <!-- Bootstrap 3.3.4 -->
    <link href="../../bootstrap/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <!-- Font Awesome Icons -->
    <link href="../../bootstrap/css/font-awesome.min.css" rel="stylesheet" type="text/css" />
    <!-- Theme style -->
    <link href="../../dist/css/AdminLTE.min.css" rel="stylesheet" type="text/css" />
    <!-- iCheck -->
    <link href="../../plugins/iCheck/square/blue.css" rel="stylesheet" type="text/css" />
    <!-- aui-artDialog -->
    <link href="../../plugins/aui-artDialog/ui-dialog.css" rel="stylesheet" type="text/css" />
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="../../JS/html5shiv.min.js"></script>
        <script src="../../JS/respond.min.js"></script>
    <![endif]-->
</head>
<body class="register-page">
    <div class="register-box">
        <div class="register-logo">
            <b>广告投放系统</b>
        </div>
        <div class="register-box-body">
            <p class="login-box-msg">注册一个用户</p>
            <form id="form1" class="form-horizontal" method="post">
                <div class="form-group has-feedback">
                    <label class="col-sm-4 control-label" for="UserID">用户名<span style="color:red">*</span></label>
                    <div class="col-sm-8">
                        @Html.TextBoxFor(model => model.UserID, new { @class = "form-control", placeholder = "用户名", @id = "UserID" })
                        <span class="glyphicon glyphicon-user form-control-feedback"></span>
                    </div>
                </div>
                <div class="form-group has-feedback">
                    <label class="col-sm-4 control-label" for="ShowUserPwd">密码<span style="color:red">*</span></label>
                    <div class="col-sm-8">
                        <input type="password" name="ShowUserPwd" id="ShowUserPwd" class="form-control" placeholder="密码" />
                        <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                        @Html.HiddenFor(model => model.UserPwd, new { @id = "UserPwd" })
                    </div>
                </div>
                <div class="form-group has-feedback">
                    <label class="col-sm-4 control-label" for="CustomerName">客户名称<span style="color:red">*</span></label>
                    <div class="col-sm-8">
                        @Html.TextBoxFor(model => model.CustomerName, new { @class = "form-control", placeholder = "客户名称", @id = "CustomerName" })
                        <span class="glyphicon glyphicon-link form-control-feedback"></span>
                    </div>
                </div>
                <div class="form-group has-feedback">
                    <label class="col-sm-4 control-label" for="ATTEN">联系人<span style="color:red">*</span></label>
                    <div class="col-sm-8">
                        @Html.TextBoxFor(model => model.ATTEN, new { @class = "form-control", placeholder = "联系人", @id = "ATTEN" })
                        <span class="glyphicon glyphicon-user form-control-feedback"></span>
                    </div>
                </div>
                <div class="form-group has-feedback">
                    <label class="col-sm-4 control-label" for="Tel">联系手机<span style="color:red">*</span></label>
                    <div class="col-sm-8">
                        @Html.TextBoxFor(model => model.Tel, new { @class = "form-control", placeholder = "联系手机", @id = "Tel" })
                        <span class="glyphicon glyphicon-phone form-control-feedback"></span>
                    </div>
                </div>
                <div class="form-group has-feedback">
                    <label class="col-sm-4 control-label" for="QQ">腾讯QQ<span style="color:red">*</span></label>
                    <div class="col-sm-8">
                        @Html.TextBoxFor(model => model.QQ, new { @class = "form-control", placeholder = "腾讯QQ", @id = "QQ" })
                        <span class="glyphicon glyphicon-link form-control-feedback"></span>
                    </div>
                </div>
                <div class="form-group has-feedback">
                    <label class="col-sm-4 control-label" for="Emaill">电子邮件<span style="color:red">*</span></label>
                    <div class="col-sm-8">
                        @Html.TextBoxFor(model => model.Emaill, new { @class = "form-control", placeholder = "电子邮件", @type = "email", @id = "Emaill" })
                        <!--<input type="email" class="form-control" placeholder="电子邮件" />-->
                        <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
                    </div>
                </div>
                <div class="form-group has-feedback">
                    <label class="col-sm-4 control-label" for="ValiCode_ip">验证码<span style="color:red">*</span></label>
                    <div class="col-sm-8">
                        <input type="text" id="ValiCode_ip" name="ValiCode" style="width:100px;display:inline-block; " class="form-control" placeholder="验证码" />
                        <img id="valiCode" style="cursor: pointer;" src="../Account/GetValidateCode" alt="验证码" />
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-8">
                        <!--  <div class="checkbox icheck">
                            <label>
                                <input type="checkbox"> I agree to the <a href="#">terms</a>
                            </label>
                        </div>-->
                    </div><!-- /.col -->
                    <div class="col-xs-4">
                        <button type="submit" class="btn btn-primary btn-block btn-flat">注册</button>
                    </div><!-- /.col -->
                </div>
            </form>
            <!-- <div class="social-auth-links text-center">
                    <p>- OR -</p>
                    <a href="#" class="btn btn-block btn-social btn-facebook btn-flat"><i class="fa fa-facebook"></i> Sign up using Facebook</a>
                    <a href="#" class="btn btn-block btn-social btn-google-plus btn-flat"><i class="fa fa-google-plus"></i> Sign up using Google+</a>
                </div>-->
            <a href="../Account/Login" class="text-center">我已经注册</a>
        </div><!-- /.form-box -->
    </div><!-- /.register-box -->
    <!-- jQuery 2.1.4 -->
    <script src="../../plugins/jQuery/jQuery-2.1.4.min.js" type="text/javascript"></script>
    <!-- Bootstrap 3.3.2 JS -->
    <script src="../../bootstrap/js/bootstrap.min.js" type="text/javascript"></script>
    <!-- iCheck -->
    <script src="../../plugins/iCheck/icheck.min.js" type="text/javascript"></script>
    <!-- md5 -->
    <script src="../../JS/jquery.md5.js" type="text/javascript"></script>
    <script src="../../JS/jquery.form.js" type="text/javascript"></script>
    <!-- aui-artDialog -->
    <script src="../../plugins/aui-artDialog/dialog-plus-min.js" type="text/javascript"></script>
    <!--<script src="../../plugins/aui-artDialog/lib/sea.js" type="text/javascript"></script>-->
    <script>
        $(function () {
            $("#valiCode").bind("click", function () {
                this.src = "../Account/GetValidateCode?time=" + (new Date()).getTime();
            });
            var form = $('#form1');
            form.submit(function ()//提交表单
            {
                if ($("#UserID").val() == "") {
                    $("#UserID").focus();
                    var d = dialog({
                        content: '用户名不能为空',
                        quickClose: true// 点击空白处快速关闭
                    });
                    d.show(document.getElementById('UserID'));
                    setTimeout(function () {
                        d.close().remove();
                    }, 3000);
                    $("#valiCode").click();
                    return false;
                }
                if ($("#ShowUserPwd").val() == "") {
                    $("#ShowUserPwd").focus();
                    var d = dialog({
                        content: '密码不能为空',
                        quickClose: true// 点击空白处快速关闭
                    });
                    d.show(document.getElementById('ShowUserPwd'));
                    setTimeout(function () {
                        d.close().remove();
                    }, 3000);
                    $("#valiCode").click();
                    return false;
                }
                if ($("#CustomerName").val() == "") {
                    $("#CustomerName").focus();
                    var d = dialog({
                        content: '客户名称不能为空',
                        quickClose: true// 点击空白处快速关闭
                    });
                    d.show(document.getElementById('CustomerName'));
                    setTimeout(function () {
                        d.close().remove();
                    }, 3000);
                    $("#valiCode").click();
                    return false;
                }
                if ($("#ATTEN").val() == "") {
                    $("#ATTEN").focus();
                    var d = dialog({
                        content: '联系人不能为空',
                        quickClose: true// 点击空白处快速关闭
                    });
                    d.show(document.getElementById('ATTEN'));
                    setTimeout(function () {
                        d.close().remove();
                    }, 3000);
                    $("#valiCode").click();
                    return false;
                }
                if ($("#Tel").val() == "") {
                    $("#Tel").focus();
                    var d = dialog({
                        content: '联系手机不能为空',
                        quickClose: true// 点击空白处快速关闭
                    });
                    d.show(document.getElementById('Tel'));
                    setTimeout(function () {
                        d.close().remove();
                    }, 3000);
                    $("#valiCode").click();
                    return false;
                }
                if ($("#QQ").val() == "") {
                    $("#QQ").focus();
                    var d = dialog({
                        content: '腾讯QQ不能为空',
                        quickClose: true// 点击空白处快速关闭
                    });
                    d.show(document.getElementById('QQ'));
                    setTimeout(function () {
                        d.close().remove();
                    }, 3000);
                    $("#valiCode").click();
                    return false;
                }
                if ($("#Emaill").val() == "") {
                    $("#Emaill").focus();
                    var d = dialog({
                        content: '电子邮件不能为空',
                        quickClose: true// 点击空白处快速关闭
                    });
                    d.show(document.getElementById('Emaill'));
                    setTimeout(function () {
                        d.close().remove();
                    }, 3000);
                    $("#valiCode").click();
                    return false;
                }
                if ($("#ValiCode_ip").val() == "") {
                    $("#ValiCode_ip").focus();
                    var d = dialog({
                        content: '验证码不能为空',
                        quickClose: true// 点击空白处快速关闭
                    });
                    d.show(document.getElementById('ValiCode_ip'));
                    setTimeout(function () {
                        d.close().remove();
                    }, 3000);
                    $("#valiCode").click();
                    return false;
                }
                var loginPwd = $.md5($("#UserID").val() + $("#ShowUserPwd").val() + "yms");
                $("#UserPwd").val(loginPwd);
                var options = {
                    beforeSubmit: function () {
                        return true;
                    },
                    url: '/Account/RegYes/',
                    type: 'POST',
                    dataType: "json",
                    success: function (context) {
                        if (context.result) {
                            if (context.message != "") {
                                var d = dialog({
                                    title: '提示',
                                    content: context.message,
                                    quickClose: true// 点击空白处快速关闭
                                });
                                d.show();
                                setTimeout(function () {
                                    d.close().remove();
                                }, 3000);
                                location.href = "../Account/Login";
                            }
                        }
                        else {
                            var d = dialog({
                                title: '提示',
                                content: context.message,
                                quickClose: true// 点击空白处快速关闭
                            });
                            d.show();
                            setTimeout(function () {
                                d.close().remove();
                            }, 3000);
                            $("#valiCode").click();
                        }
                    },
                    error: function (XMLResponse) {
                        var d = dialog({
                            title: '提示',
                            content: XMLResponse.responseText,
                            quickClose: true// 点击空白处快速关闭
                        });
                        d.show();
                        setTimeout(function () {
                            d.close().remove();
                        }, 3000);
                        $("#valiCode").click();
                    }
                };
                form.ajaxSubmit(options);
                return false; //为了不刷新页面,返回false
            });
        });
    </script>
</body>
</html>
