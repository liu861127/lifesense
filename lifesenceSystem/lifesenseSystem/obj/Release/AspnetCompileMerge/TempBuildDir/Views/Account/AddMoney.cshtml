@model AdvertSystem.Models.t_myrecharge

@{
    ViewBag.Title = "客户充值";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        客户充值
        <small></small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="../Account/Index"><i class="fa fa-dashboard"></i>首页</a></li>
        <li><a href="../Account/AddMoney#">充值记录</a></li>
        <li class="active">客户充值</li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <div class="row">
        <!-- left column -->
        <div class="col-md-6">
            <div class="box box-success">
                <div class="box-header">
                    <!--<h3 class="box-title">Data Table With Full Features</h3>-->
                </div><!-- /.box-header -->
                <!-- form start -->
                <form role="form" id="form1" class="form-horizontal" onkeydown="if (event.keyCode == 13) { $('#but').click(); return false; }" method="post">
                    <div class="box-body">
                        <div class="form-group">
                            <label class="col-sm-3 control-label" for="seluser">客户名<span style="color:red">*</span></label>
                            <div class="col-sm-5">
                                <select id="seluser" class="form-control js-example-data-array-selected select2">
                                    @foreach (var m in (List<AdvertSystem.Models.t_user>)ViewData["userlist"])
                                    {
                                        <option value="@m.UserID">@m.CustomerName</option>
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label" for="RechargeAmount">充值金额<span style="color:red">*</span></label>
                            <div class="col-sm-8">
                                @Html.TextBoxFor(model => model.RechargeAmount, new { @class = "form-control", placeholder = "录入充值金额", @id = "RechargeAmount", @type = "number", step = "0.01" })
                            </div>
                        </div>
                    </div><!-- /.box-body -->
                    <div class="box-footer">
                        <input type="button" class="btn btn-primary" onclick="Valconfirm()" id="but" value="确定" />
                        <input type="submit" class="btn btn-primary" style="display:none;" id="sub" value="确定" />
                    </div>
                </form>
            </div><!-- /.box -->
        </div><!--/.col (left) -->
    </div><!-- /.row -->
</section><!-- /.content -->
