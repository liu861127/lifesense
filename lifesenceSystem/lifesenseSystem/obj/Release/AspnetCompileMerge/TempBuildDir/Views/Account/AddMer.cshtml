@model  AdvertSystem.Models.t_user

@{
    ViewBag.Title = "添加客户";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        添加客户
        <small></small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="../Account/Index"><i class="fa fa-dashboard"></i>首页</a></li>
        <li><a href="../Account/AddMer#">商户管理</a></li>
        <li class="active">添加客户</li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <div class="row">
        <!-- left column -->
        <div class="col-md-6">
            <div class="box">
                <div class="box-header">
                    <!--<h3 class="box-title">Data Table With Full Features</h3>-->
                </div><!-- /.box-header -->
                <!-- form start -->
                <form class="form-horizontal" id="form1" method="post">
                    <div class="box-body">
                        <div class="form-group">
                            <label class="col-sm-3 control-label" for="CustomerName">客户名称<span style="color:red">*</span></label>
                            <div class="col-sm-8">
                                @Html.TextBoxFor(model => model.CustomerName, new { @class = "form-control", placeholder = "录入客户名称", @id = "CustomerName" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label" for="UserID">用户名<span style="color:red">*</span></label>
                            <div class="col-sm-8">
                                @Html.TextBoxFor(model => model.UserID, new { @class = "form-control", placeholder = "录入用户名", @id = "UserID" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label" for="ShowUserPwd">密码<span style="color:red">*</span></label>
                            <div class="col-sm-8">
                                <input type="password" name="ShowUserPwd" id="ShowUserPwd" class="form-control" placeholder="录入密码" />
                                @Html.HiddenFor(model => model.UserPwd, new { @id = "UserPwd" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label" for="Tel">联系电话<span style="color:red">*</span></label>
                            <div class="col-sm-8">
                                @Html.TextBoxFor(model => model.Tel, new { @class = "form-control", placeholder = "录入联系电话", @id = "Tel" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label" for="QQ">QQ<span style="color:red">*</span></label>
                            <div class="col-sm-8">
                                @Html.TextBoxFor(model => model.QQ, new { @class = "form-control", placeholder = "录入QQ", @id = "QQ" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label" for="Emaill">邮箱<span style="color:red">*</span></label>
                            <div class="col-sm-8">
                                @Html.TextBoxFor(model => model.Emaill, new { @class = "form-control", placeholder = "录入邮箱", @id = "Emaill", @type = "email" })
                            </div>
                        </div>
                    </div><!-- /.box-body -->
                    <div class="box-footer">
                        <button type="submit" class="btn btn-primary">确定</button>
                    </div>
                </form>
            </div><!-- /.box -->
        </div><!--/.col (left) -->
    </div><!-- /.row -->
</section><!-- /.content -->
