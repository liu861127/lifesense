@model AdvertSystem.Models.t_user

@{
    ViewBag.Title = "账户资料";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        账户资料
        <small></small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="../Account/Index"><i class="fa fa-dashboard"></i>首页</a></li>
        <li><a href="../Account/UpdateUserInfo#">账户中心</a></li>
        <li class="active">账户资料</li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <div class="row">
        <!-- left column -->
        <div class="col-md-6">
            <div class="box">
                <div class="box-header">
                    <!--<h3 class="box-title">Data Table With Full Features</h3>-->
                </div><!-- /.box-header -->
                <!-- form start -->
                <form class="form-horizontal" id="form1" method="post">
                    <div class="box-body">
                        <div class="form-group">
                            <label class="col-sm-3 control-label" for="CompanyName">公司全称</label>
                            <div class="col-sm-8">
                                @Html.TextBoxFor(model => model.CompanyName, new { @class = "form-control", placeholder = "录入公司全称", @id = "CompanyName" })
                            </div>
                        </div>
                        <div class="form-group" id="ShowBusinessLicense">
                            <label class="col-sm-3 control-label" for="BusinessLicense">营业执照</label>
                            <div class="col-sm-8">
                                <img src="@Model.BusinessLicense" width="100" height="100" />
                                <input id="exampleInputFile_1" name="exampleInputFile_1" type="file" />
                                @Html.HiddenFor(model => model.BusinessLicense, new { @id = "BusinessLicense" })
                            </div>
                        </div>
                        <div class="form-group" id="ShowIQD">
                            <label class="col-sm-3 control-label" for="IQD">行业资质文件</label>
                            <div class="col-sm-8">
                                <img src="@Model.IQD" width="100" height="100" />
                                <input id="exampleInputFile_2" name="exampleInputFile_2" type="file" />
                                @Html.HiddenFor(model => model.IQD, new { @id = "IQD" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label" for="Flink">跳转网址链接</label>
                            <div class="col-sm-8">
                                @Html.TextBoxFor(model => model.Flink, new { @class = "form-control", placeholder = "录入跳转网址链接", @id = "Flink" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label" for="ATTEN">联系人</label>
                            <div class="col-sm-8">
                                @Html.TextBoxFor(model => model.ATTEN, new { @class = "form-control", placeholder = "录入联系人", @id = "ATTEN" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label" for="Tel">联系电话</label>
                            <div class="col-sm-8">
                                @Html.TextBoxFor(model => model.Tel, new { @class = "form-control", placeholder = "录入联系电话", @id = "Tel" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label" for="QQ">QQ号</label>
                            <div class="col-sm-8">
                                @Html.TextBoxFor(model => model.QQ, new { @class = "form-control", placeholder = "录入QQ号", @id = "QQ" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label" for="ContactAddress">联系地址</label>
                            <div class="col-sm-8">
                                @Html.TextBoxFor(model => model.ContactAddress, new { @class = "form-control", placeholder = "录入联系地址", @id = "ContactAddress" })
                            </div>
                        </div>
                    </div><!-- /.box-body -->
                    <div class="box-footer">
                        <button type="submit" class="btn btn-primary">确定</button>
                        <input type="hidden" id="hidusername" value="@ViewData["user"]" />
                    </div>
                </form>
            </div><!-- /.box -->
        </div><!--/.col (left) -->
    </div><!-- /.row -->
</section><!-- /.content -->
