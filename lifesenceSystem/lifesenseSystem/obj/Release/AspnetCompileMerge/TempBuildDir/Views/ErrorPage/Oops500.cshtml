@{
    ViewBag.Title = "500 错误";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        500 错误 页面
    </h1>
    <ol class="breadcrumb">
        @{
            var directory = "";
            if (ViewData["usertype"].ToString() == "管理员")
            {
                directory = "Admin";
            }
            else
            {
                directory = "Account";
            }
        }
        <li><a href="../@directory/Index"><i class="fa fa-dashboard"></i>首页</a></li>
        <li class="active">500 错误</li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <div class="error-page">
        <h2 class="headline text-red">500</h2>
        <div class="error-content">
            <h3><i class="fa fa-warning text-red"></i>@ViewData["message"]</h3>
            <p>
                请联系管理员，我们将立即解决这一工作。
                同时，您可以返回到<a href="../@directory/Index">首页</a>
            </p>
            <form class="search-form">
                <!--<div class="input-group">
                    <input type="text" name="search" class="form-control" placeholder="Search" />
                    <div class="input-group-btn">
                        <button type="submit" name="submit" class="btn btn-warning btn-flat"><i class="fa fa-search"></i></button>
                    </div>
                </div> /.input-group -->
            </form>
        </div><!-- /.error-content -->
    </div><!-- /.error-page -->
</section><!-- /.content -->
