<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler,log4net" />
  </configSections>
  <log4net>
    <root>
      <!--文件形式记录日志-->&gt;
    </root>
    <appender name="ConsoleAppender" type="log4net.Appender.ConsoleAppender">
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date [%thread] %-5level %logger &lt;%property{auth}&gt;%newline    - %message%newline" />
      </layout>
    </appender>
    <appender name="RollingLogFileAppender" type="log4net.Appender.RollingFileAppender">
      <file value="日志\Serverlog.txt" />
      <appendToFile value="true" />
      <maxSizeRollBackups value="10" />
      <maximumFileSize value="10MB" />
      <rollingStyle value="Size" />
      <staticLogFileName value="true" />
      <layout type="log4net.Layout.PatternLayout">
        <header value="[Header]&#xD;&#xA;" />
        <footer value="[Footer]&#xD;&#xA;" />
        <conversionPattern value="%date [%thread] %-5level %logger %newline     - %message%newline      %F 行%L %newline %exception %newline" />
      </layout>
      <lockingModel type="log4net.Appender.FileAppender+MinimalLock" />
    </appender>
    <logger name="控制台模式">
      <!-- <appender-ref ref="B" /> -->
      <level value="ALL" />
      <appender-ref ref="ConsoleAppender" />
      <appender-ref ref="RollingLogFileAppender" />
    </logger>
    <logger name="服务模式">
      <!-- <appender-ref ref="B" /> -->
      <level value="ALL" />
      <appender-ref ref="RollingLogFileAppender" />
    </logger>
  </log4net>
  <appSettings>
    <!-- 连接字符串是否加密 -->
    <add key="ConStringEncrypt" value="false"/>
    <add key="ConnectionString" value="server=127.0.0.1;database=lifesense;uid=sa;pwd=123456"/>
    <add key="VirtualPath" value=""/>
    <!--APPid -->
    <add key="APPid" value="1b80cf89b99d608d0ee2845e1fae137d3aa3e04c"/>
    <!--APPsecret-->
    <add key="APPsecret" value="ef1a5ab65c0c26747d85fc0832a9d5548e1c9cb7"/>
    <!--接口地址-->
    <add key="Url" value="30"/>
  </appSettings>
</configuration>
